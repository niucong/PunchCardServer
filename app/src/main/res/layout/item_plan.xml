<?xml version="1.0" encoding="utf-8"?>
<!--<layout>-->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp">

    <TextView
        android:id="@+id/item_plan_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:text="序号"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/item_plan_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="1"
        android:text="名称"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/item_plan_creator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:text="创建者"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/item_plan_creattime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="创建时间"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/item_plan_owners"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="1"
        android:text="关联人员"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/item_plan_starttime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="开始时间"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/item_plan_endtime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="结束时间"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/item_plan_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:text="计划状态"
        android:textSize="18dp"/>
</LinearLayout>
    <!--</layout>-->