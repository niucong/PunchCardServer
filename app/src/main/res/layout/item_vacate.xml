<?xml version="1.0" encoding="utf-8"?>
<!--<layout>-->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp">

    <TextView
        android:id="@+id/item_vacate_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:text="序号"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/item_vacate_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="名称"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/item_vacate_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:text="请假类型"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/item_vacate_starttime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="开始时间"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/item_vacate_endtime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="结束时间"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/item_vacate_creattime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="请假时间"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/item_vacate_edittime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="批复时间"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/item_vacate_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="批复状态"
        android:textSize="18dp"/>
</LinearLayout>
    <!--</layout>-->